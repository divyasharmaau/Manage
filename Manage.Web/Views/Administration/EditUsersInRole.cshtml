@{
}

@model List<Manage.Web.ViewModels.UserRoleViewModel>

@{ 
    var roleId = ViewBag.roleId;
}

<section class="content">
    <div class="container-fluid">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Add or Remove Users to a Role</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Edit Role Details</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="card">
                                <div class="card-header">
                                    <h3>Add or remove users from this role</h3>
                                </div>
                                <div class="card-body">
                                    @* loop through each user in view model*@
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@Model[i].UserId" />
                                            <input type="hidden" asp-for="@Model[i].UserName" />
                                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                                            <label asp-for="@Model[i].IsSelected" class="form-check-label">
                                                @Model[i].UserName
                                            </label>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer">
                                    <input type="submit" value="Update" class="btn btn-primary"
                                           style="width:auto" />
                                    <a asp-action="EditRole" asp-route-id="@roleId"
                                       class="btn btn-primary" style="width:auto">Cancel</a>
                                    @*<input type="submit" value="Update" asp-action="EditRole"  class="btn btn-outline-success" />
                <a>Update</a>
                <a asp-action="EditRole" asp-route-id="@roleId">Cancel</a>*@
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
