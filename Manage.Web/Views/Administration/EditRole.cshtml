@model Manage.Web.ViewModels.EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}
<section class="content">
    <div class="container-fluid">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Edit Role</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Edit Role Details</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group row">
                                <label asp-for="Name" class="col-sm-2  col-form-label small form-text"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div asp-validation-summary="All"></div>
                            <div class="card-footer">

                                <div class="form-group row">
                                    <div class="col-sm-10">
                                        <button type="submit" class="btn btn-outline-success">Update</button>
                                        <a asp-action="ListRoles" class="btn btn-outline-primary">Cancel</a>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Users in this Role</h3>
                                </div>
                                <div class="card-body">
                                    @if (Model.Users.Any())
                                    {
                                        foreach (var user in Model.Users)
                                        {
                                            <h5 style="font-size:16px;">@user</h5>
                                        }
                                    }
                                    else
                                    {
                                        <h5 class="card-title">No users</h5>
                                    }
                                </div>
                                <div class="card-footer">
                                    @*We want the id to be passed in the query string with the name roleId *@
                                    <a asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleId="@Model.Id" class="btn btn-outline-info">Add or Remove Users</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>