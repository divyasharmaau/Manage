@model Manage.Web.ViewModels.EmployeePersonalDetailsViewModel
<section class="content">
    <div class="container-fluid">

        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Add Employee Personal Details</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <form enctype="multipart/form-data" asp-controller="Employee" asp-action="CreateEmployeePersonalDetails" method="post" class="mt-5">
                    <input asp-for="Id" type="hidden" />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="FullName">Employee Name</label>
                            <div class="col">
                                <input asp-for="FullName" class="form-control" readonly/>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Photo" class="col-auto col-form-label small form-text">Photograph</label>
                            <div class="form-group">
                                <div class="col custom-file">
                                    <input asp-for="Photo" class="form-control custom-file-input"/>
                                    <label class="custom-file-label">Choose File....</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <div class="col img-box" id="img-box">

                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <!--/.card-body-->
        </div>
    </div>
</section>